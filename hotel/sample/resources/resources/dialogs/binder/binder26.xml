<?xml version="1.0"?>
<ui:UiBinder xmlns:ui='http://www.jythongwt.uibinderxsd.com'
	xmlns:g='http://www.jythongwt.uibinderxsd.com' xmlns:p='http://www.jythongwt.uibinderxsd.com'
	xmlns:i='http://www.jythongwt.uibinderxsd.com' xmlns='http://www.jythongwt.uihtml.com'>


    <g:HTMLPanel addStyleNames="horizontal-section-container iicons">
        <style is="custom-style">
          .iicons iron-icon:hover {
            fill: var(--google-yellow-700);
          }
          .iicons .set {
            margin: auto;
            padding: 1em 0;
            border-bottom: 1px solid silver;
            @apply(--layout-horizontal);
            @apply(--layout-wrap);
          }
          .iicons .set:last-of-type {
            border-bottom: none;
          }
          .iicons .set:nth-of-type(4n-3) {
            color: var(--paper-grey-700);
          }
          .iicons .set:nth-of-type(4n-2) {
            color: var(--paper-pink-500);
          }
          .iicons .set:nth-of-type(4n-1) {
            color: var(--google-green-500);
          }
          .iicons .set:nth-of-type(4n) {
            color: var( --google-blue-500);
          }
          .iicons .container {
            min-width: 10em;
            padding: 1em 0.5em;
            text-align: center;
            @apply(--layout-vertical);
            @apply(--layout-center);
            @apply(--layout-flex-1);
          }
          .iicons .name {
            margin-top: 0.5em;
            color: black;
            font-size: 10px;
          }        
        </style>

        <template ui:field="bindTemplate" is="dom-bind" id="my-element" >

          <iron-meta type="iconset" list="{{iconsets}}"></iron-meta>

          <template is="dom-repeat" items="{{iconsets}}" as="iconSet">
            <h2>{{iconSet.name}}</h2>

            <div class="set">
              <template is="dom-repeat" items="{{getIconNames(iconSet)}}" as="iconName">
                <span class="container">
                  <iron-icon icon="{{iconName}}"></iron-icon>
                  <div class="name">{{iconName}}</div>
                </span>
              </template>
            </div>
          </template>

        </template>
        
    </g:HTMLPanel>
        
</ui:UiBinder>