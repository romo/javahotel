<?xml version="1.0"?>
<ui:UiBinder xmlns:ui='http://www.jythongwt.uibinderxsd.com'
	xmlns:g='http://www.jythongwt.uibinderxsd.com' xmlns:p='http://www.jythongwt.uibinderxsd.com'
	xmlns:i='http://www.jythongwt.uibinderxsd.com' xmlns='http://www.jythongwt.uihtml.com'>

  <style>
        .collapse-sample paper-material {
            display: inline-block;
            background: white;
            box-sizing: border-box;
            margin: 16px;
            padding: 16px;
            border-radius: 2px;
        }

        .collapse-sample .fab {
            display: inline-block;
            background: white;
            box-sizing: border-box;
            width: 56px;
            height: 56px;
            margin: 16px;
            padding: 16px;
            border-radius: 50%;
            text-align: center;
            cursor: pointer;
        }
    </style>

    <g:HTMLPanel addStyleNames="collapse-sample">

        <section>
            <div>Paper Elevations</div>

            <p:PaperMaterial elevation="0">
                elevation = 0
            </p:PaperMaterial>

            <p:PaperMaterial elevation="1">
                elevation = 1
            </p:PaperMaterial>

            <p:PaperMaterial elevation="2">
                elevation = 2
            </p:PaperMaterial>

            <p:PaperMaterial elevation="3">
                elevation = 3
            </p:PaperMaterial>

            <p:PaperMaterial elevation="4">
                elevation = 4
            </p:PaperMaterial>

            <p:PaperMaterial elevation="5">
                elevation = 5
            </p:PaperMaterial>
        </section>

        <section>
            <div>Animated</div>

            <p:PaperMaterial fieldid="material" elevation="0" animated="true">
                tap
            </p:PaperMaterial>

            <p:PaperMaterial fieldid="fabMaterial" addStyleNames="fab layout center-center" elevation="0" animated="true">
                tap
            </p:PaperMaterial>
        </section>
        
    </g:HTMLPanel>
        
</ui:UiBinder>