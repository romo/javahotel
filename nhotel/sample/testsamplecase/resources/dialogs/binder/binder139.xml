<?xml version="1.0"?>
<ui:UiBinder xmlns:ui='http://www.jythongwt.uibinderxsd.com'
	xmlns:g='http://www.jythongwt.uibinderxsd.com' xmlns:p='http://www.jythongwt.uibinderxsd.com'
	xmlns:i='http://www.jythongwt.uibinderxsd.com' xmlns='http://www.jythongwt.uihtml.com'>

  <g:HTMLPanel addStyleNames="spinner-sample">
        <style is="custom-style">
            .spinner-sample .horizontal-section {
                width: 100px;
            }
            .spinner-sample paper-spinner, button {
                display: block;
                margin-bottom: 24px;
                margin-left: auto;
                margin-right: auto;
            }
            .spinner-sample paper-spinner.blue {
                --paper-spinner-layer-1-color: var(--paper-light-blue-500);
                --paper-spinner-layer-2-color: var(--paper-light-blue-500);
                --paper-spinner-layer-3-color: var(--paper-light-blue-500);
                --paper-spinner-layer-4-color: var(--paper-light-blue-500);
            }
            .spinner-sample paper-spinner.red {
                --paper-spinner-layer-1-color: var(--paper-red-500);
                --paper-spinner-layer-2-color: var(--paper-red-500);
                --paper-spinner-layer-3-color: var(--paper-red-500);
                --paper-spinner-layer-4-color: var(--paper-red-500);
            }
            .spinner-sample paper-spinner.orange {
                --paper-spinner-layer-1-color: var(--paper-orange-500);
                --paper-spinner-layer-2-color: var(--paper-orange-500);
                --paper-spinner-layer-3-color: var(--paper-orange-500);
                --paper-spinner-layer-4-color: var(--paper-orange-500);
            }
            .spinner-sample paper-spinner.green {
                --paper-spinner-layer-1-color: var(--paper-green-500);
                --paper-spinner-layer-2-color: var(--paper-green-500);
                --paper-spinner-layer-3-color: var(--paper-green-500);
                --paper-spinner-layer-4-color: var(--paper-green-500);
            }
        </style>
        <div class="horizontal-section-container center-justified layout">
            <div>
                <h4>Default</h4>
                <div class="horizontal-section">
                    <p:PaperSpinner active="true" fieldid="toggle1_1"/>
                    <p:PaperSpinner active="true" fieldid="toggle1_2"/>
                    <p:PaperSpinner active="true" fieldid="toggle1_3"/>
                    <p:PaperSpinner active="true" fieldid="toggle1_4"/>
                    <p:PaperButton fieldid="toggleBtn1" raised="true">Toggle</p:PaperButton>
                </div>
            </div>

            <div>
                <h4>Color</h4>
                <div class="horizontal-section">
                    <p:PaperSpinner active="true" fieldid="toggle2_1" addStyleNames="blue"/>
                    <p:PaperSpinner active="true" fieldid="toggle2_2" addStyleNames="red"/>
                    <p:PaperSpinner active="true" fieldid="toggle2_3" addStyleNames="orange"/>
<!--                     <paper-spinner fieldid="toggle2_4" active="" class="green"/> -->
                    <p:Label fieldid="label1" /> 
                    <p:HTML fieldid="html1" /> 
                    <p:InlineLabel fieldid="inline1" /> 
                    <p:PaperSpinner fieldid="toggle2_4" active="true" class="green"/>
                    <p:PaperButton fieldid="toggleBtn2" raised="true">Toggle</p:PaperButton>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
    
</ui:UiBinder>