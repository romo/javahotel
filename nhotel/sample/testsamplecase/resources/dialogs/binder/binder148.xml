<?xml version="1.0"?>
<ui:UiBinder xmlns:ui='http://www.jythongwt.uibinderxsd.com'
	xmlns:g='http://www.jythongwt.uibinderxsd.com' xmlns:p='http://www.jythongwt.uibinderxsd.com'
	xmlns:i='http://www.jythongwt.uibinderxsd.com' xmlns='http://www.jythongwt.uihtml.com'>

    
    <ui:style>
        .button {
            margin: 20px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="toast-sample">
        <p:PaperButton fieldid="button1" raised="true" addStyleNames="{style.button}">Discard Draft</p:PaperButton>

        <p:PaperButton fieldid="button2" raised="true" addStyleNames="{style.button}">Get Messages</p:PaperButton>

        <p:PaperToast fieldid="toast1" text="Your draft has been discarded."/>

        <p:PaperToast fieldid="toast2" down="aaaa" text="Connection timed out. Showing limited messages.">
            <span role="button" tabindex="0" style="color: #eeff41;margin: 10px" onclick="console.log('RETRY')">Retry</span>
        </p:PaperToast>
    </g:HTMLPanel></ui:UiBinder>

